<%= render "patients/patientheader" %>
<div class="w-container">
<br>
<h3>Listing patients</h3>
<br>
<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.first_name %></td>
    <td><%= patient.last_name %></td>
    <td><%= patient.longitude %></td>
    <td><%= patient.latitude %></td>
    <td><%= link_to 'Show', patient, :class=>"table-link-grey" %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient), :class=>"table-link-grey" %></td>
    <td><%= link_to 'Destroy', patient, :confirm => 'Are you sure?', :method => :delete, :class=>"table-link-grey" %></td>
  </tr>
<% end %>
</table>

<br />
